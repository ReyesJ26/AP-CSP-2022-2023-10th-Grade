#Random number
import random
print (random.randrange(1,10))

#Concatenation
a = 'Hello'
b = 'Paricia'
c = a+ ' ' +b
print (c)
#string format
age = ' 36'
txt = "My name is Patricia, I am"+ age
print (txt)
#Escape characters
#To insert characters that are illegal in a string , use an escape, in this case \
#text = "We're fabulous" Unicorns "From amazingland"
text = "We are fabulous\"Unicorns\"from amazingland"
print (text)
